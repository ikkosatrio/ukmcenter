<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:editTextColor">@color/colorGrey2</item>
        <item name="android:textColor">@color/colorGrey2</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorHint">@color/colorGrey2</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/button_text_color</item>
        <!--<item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>-->
        <!--<item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>-->
        <!--<item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>-->
    </style>

    <style name="ButtonColor" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="text_in_layout_hint_Style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppThemeWithActionBar" parent="Base.Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:editTextColor">@color/colorGrey</item>
        <!--<item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>-->
        <!--<item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>-->
        <!--<item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>-->
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="AppFullScreenThemeWithActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

</resources>
